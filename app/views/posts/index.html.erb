<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Publish date</th>
      <th>User</th>
      <th>使用者信箱</th>
      <th>分類</th>
      <th>圖片</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.publish_date %></td>
        <td><%= post.user.name %></td> 
        <td><%= post.user.email %></td>
        <td><%= post.category.try(:name) %></td>
        <td><%= image_tag post.picture.small %></td>
        <td><%= link_to 'Show', post, class:'btn btn-warning' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:'btn btn-info' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts, :theme => 'twitter-bootstrap-3' %>

<br>

<%= link_to 'New Post', new_post_path, class:'btn btn-success' %>


